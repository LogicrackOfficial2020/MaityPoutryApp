<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="310dp">

    <LinearLayout
        android:layoutDirection="ltr"
        android:background="@drawable/dialog_style"
        android:orientation="vertical"
        android:layout_marginTop="65dp"
        android:minWidth="310dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="Order Rating"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="20dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linearLayo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_margin="20dp">


        <RatingBar
            android:id="@+id/order_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0.0"
            />
    </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <Button
                android:id="@+id/btncancel"
                android:textSize="12dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="@drawable/cancel_selection"
                android:layout_weight="1.0"/>

            <Button
                android:id="@+id/btnsubmit"
                android:textSize="12dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_weight="1.0"
                android:background="@drawable/submit_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit" />
        </LinearLayout>



    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_width="110dp"
        android:layout_height="110dp"
        tools:ignore="ContentDescription" />


</FrameLayout>
